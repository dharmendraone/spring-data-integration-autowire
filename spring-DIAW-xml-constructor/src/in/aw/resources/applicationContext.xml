<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    
    <bean class="in.aw.beans.Address" id="address">
    <constructor-arg value="Kolar colony"/>
    <constructor-arg value="Bhopal"/>
    <constructor-arg value="462016"/>
    </bean>
    
	<bean class="in.aw.beans.Student" id="stdid" autowire="constructor">
	<constructor-arg value="Dharmendra Patel" index="0"/>
	<constructor-arg value="dharmendra@gmail.com" index="1"/>
	</bean>


</beans>